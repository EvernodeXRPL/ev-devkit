{
  "name": "evdevkit",
  "version": "0.6.4",
  "description": "Developer toolkit for Evernode smart contract deployment",
  "keywords": [
    "Evernode",
    "toolkit",
    "evdevkit",
    "smart contract"
  ],
  "homepage": "https://github.com/HotPocketDev/evernode-sdk",
  "license": "MIT",
  "dependencies": {
    "archiver": "5.3.1",
    "commander": "9.4.0",
    "evernode-js-client": "0.6.8",
    "hotpocket-js-client": "0.5.5",
    "uuid": "9.0.0"
  },
  "devDependencies": {
    "eslint": "8.3.0"
  },
  "scripts": {
    "lint": "./node_modules/.bin/eslint *.js",
    "build": "npm run lint && ncc build index.js -o dist/",
    "build:bootstrap": "cmake -S ./evernode-bootstrap-contract/ -B ./evernode-bootstrap-contract/ && make --directory=./evernode-bootstrap-contract",
    "bundle": "npm run build && npm run prepare && cp -r ./lib/assets ./dist/assets && ./clean-pkg.sh",
    "publish": "npm run bundle && cp README.md dist && cp && npm publish ./dist",
    "prepare": "npm run build:bootstrap && cp ./evernode-bootstrap-contract/build/bootstrap_contract ./lib/assets/bootstrap_contract && cp ./evernode-bootstrap-contract/src/bootstrap_upgrade.sh ./lib/assets/bootstrap_upgrade.sh"
  },
  "bin": {
    "evdevkit": "./index.js"
  }
}
